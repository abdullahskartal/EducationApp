<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soru">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnDersAdiKonu"
            android:layout_width="146dp"
            android:layout_height="26dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@android:color/holo_red_dark"
            android:text="HTML, KONU1"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/txtSoru"
            android:layout_width="309dp"
            android:layout_height="84dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="64dp"
            android:ems="10"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/txtA"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_marginTop="173dp"
            android:text="Button"

            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/txtB"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_centerVertical="true"
            android:text="Button"
            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/txtC"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_marginBottom="165dp"
            android:text="Button"
            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="-58dp"
            android:layout_toStartOf="@+id/txtSoru"
            android:drawableTop="@drawable/ic_action_person"
            android:text="Profil" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginStart="98dp"
            android:drawableTop="@mipmap/ic_launcher_persons"
            android:text="Arkadaşlar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_toEndOf="@+id/btnDersAdiKonu"
            android:drawableTop="@mipmap/ic_launcher_mail"
            android:text="Mesajlar" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginEnd="152dp"
            android:drawableTop="@mipmap/ic_launcher_star"
            android:text="Skorlar" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="107dp"
            android:layout_marginStart="85dp"
            android:text="Sınavı Bitir"
            android:background="#073763"
            android:textColor="#ffffff"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/button8"
            android:layout_marginEnd="79dp"
            android:text="Soruyu Geç"
            android:background="#073763"
            android:textColor="#ffffff"
            />



    </RelativeLayout>
</android.support.constraint.ConstraintLayout>