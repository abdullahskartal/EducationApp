<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Soru"
    android:background="@drawable/soru">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <Button
            android:id="@+id/btnDersAdiKonu"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@android:color/holo_red_dark"
            android:text="HTML, KONU1"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtSoru"
            android:layout_width="298dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp"
            android:layout_marginTop="83dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text=""
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/txtA"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_marginTop="195dp"

            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/txtB"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_marginBottom="227dp"
            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/txtC"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/txtSoru"
            android:layout_marginBottom="127dp"
            android:background="@android:color/holo_red_dark"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSinavBitir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnSoruGec"
            android:layout_marginStart="89dp"
            android:background="#073763"
            android:text="Sınavı Bitir"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnSoruGec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="49dp"
            android:layout_marginEnd="80dp"
            android:background="#073763"
            android:text="Soruyu Geç"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/txtDogruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnDersAdiKonu"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="14dp"
            android:text="Doğru sayınız:"
            android:textColor="#fff" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>