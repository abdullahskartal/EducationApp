<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Konu"
    android:background="@drawable/konu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/btnCsharpDersi"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_centerHorizontal="true"
            android:layout_marginBottom="97dp"
            android:background="@android:color/holo_red_dark"
            android:drawableLeft="@mipmap/ic_launcher_csharp"
            android:text="C#"
            android:textColor="#ffffff"

            />

        <Button
            android:id="@+id/btnCssDersi"
            android:layout_width="297dp"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"
            android:background="@android:color/holo_red_dark"
            android:drawableLeft="@mipmap/ic_launcher_css"
            android:text="CSS"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnHtmlDersi"
            android:layout_width="297dp"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:background="@android:color/holo_red_dark"
            android:drawableLeft="@mipmap/ic_launcher_html"
            android:text="Html"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnCdersi"
            android:layout_width="297dp"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="181dp"
            android:background="@android:color/holo_red_dark"
            android:drawableLeft="@mipmap/ic_launcher_c"
            android:text="C"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:text="Hangi programlama diliyle alıştırma yapmak istersiniz?"
            android:textColor="#fff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnProfil"
            android:layout_width="111dp"
            android:layout_height="58dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="14dp"
            android:background="#073763"
            android:drawableLeft="@mipmap/ic_launcher_profil"
            android:text="Profil"
            android:textColor="#fff" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>