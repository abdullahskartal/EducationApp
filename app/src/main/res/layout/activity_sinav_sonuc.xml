<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinavSonuc"
    android:background="@drawable/soru"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/konular4"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="169dp"
            android:background="@android:color/holo_red_dark"
            android:text="Doğru Cevap Sayısı"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/konular3"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_above="@+id/txtSonucSoruSayisi"
            android:layout_marginBottom="-206dp"
            android:background="@android:color/holo_red_dark"
            android:text="Toplam Soru Sayısı"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/konular2"
            android:layout_width="200dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="@android:color/holo_red_dark"
            android:text="Toplam Cevaplanan Soru"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnDersAdiKonu"
            android:layout_width="274dp"
            android:layout_height="61dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="38dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/holo_red_dark"
            android:text="Sınavınız Bitti. Sonuçlarınız:"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/btnGeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnDersAdiKonu"
            android:layout_marginStart="12dp"
            android:drawableStart="@mipmap/ic_launcher_bac"
            android:text="" />

        <TextView
            android:id="@+id/txtSonucSoruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/btnDersAdiKonu"
            android:layout_marginTop="215dp"
            android:text="3"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtSonucCevapSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnDersAdiKonu"
            android:layout_marginBottom="214dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtSonucDogruSayisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnDersAdiKonu"
            android:layout_marginBottom="120dp"
            android:text="0"
            android:textColor="#fff"
            android:textSize="25sp"
            />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toStartOf="@+id/btnDersAdiKonu"
            android:drawableTop="@drawable/ic_action_person"
            android:text="Profil" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="14dp"
            android:layout_marginEnd="127dp"
            android:drawableTop="@mipmap/ic_launcher_persons"
            android:text="Arkadaşlar" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView4"
            android:layout_marginEnd="47dp"
            android:drawableTop="@mipmap/ic_launcher_mail"
            android:text="Mesajlar" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginStart="117dp"
            android:drawableTop="@mipmap/ic_launcher_star"
            android:text="Skorlar" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>